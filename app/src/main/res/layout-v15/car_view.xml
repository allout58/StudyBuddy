<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="car"
            type="edu.clemson.six.assignment4.model.Car"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:background="@color/colorPrimary"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@{String.valueOf(car.year) + ' ' + car.make + ' ' + car.model}"
                android:textSize="18sp"/>

            <edu.clemson.six.assignment4.view.component.BorderedColorView
                android:id="@+id/color_pad"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/titleTxt"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@{car.color}"
                app:borderColor="@color/colorBorder"
                app:borderWidth="3dp"/>

            <!--<TextView-->
            <!--android:id="@+id/car_owner"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/titleTxt"-->
            <!--android:layout_toEndOf="@+id/color_pad"-->
            <!--android:layout_toRightOf="@+id/color_pad"-->
            <!--android:text="@{car.user.name}"/>-->

            <TextView
                android:id="@+id/car_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleTxt"
                android:layout_toEndOf="@+id/color_pad"
                android:layout_toRightOf="@+id/color_pad"
                android:text="@{car.license}"/>

            <TextView
                android:id="@+id/car_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_license"
                android:layout_toEndOf="@+id/color_pad"
                android:layout_toRightOf="@+id/color_pad"
                android:text="@{car.state}"/>
            <!--DEBUG INFO, doesn't really update well tho...-->
            <!--<TextView-->
            <!--android:id="@+id/car_id"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/car_state"-->
            <!--android:layout_toEndOf="@+id/color_pad"-->
            <!--android:layout_toRightOf="@+id/color_pad"-->
            <!--android:text="@{`id:` + String.valueOf(car.id)}" />-->

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/car_id"-->
            <!--android:layout_toEndOf="@+id/color_pad"-->
            <!--android:layout_toRightOf="@+id/color_pad"-->
            <!--android:text="@{`sort:` + String.valueOf(car.sortOrder)}" />-->

            <ImageView
                android:id="@+id/viewHandle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                app:srcCompat="@drawable/ic_menu_white_24dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</layout>